source 'https://rubygems.org'

gem 'rails', '3.2.14'

gem 'sqlite3'

gem 'jquery-rails'

# Authentication/Authorization
gem 'devise'
gem 'cancan'

# App Server
gem 'unicorn'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'uglifier', '>= 1.0.3'
end

group :development, :test do
  gem 'pry'
  gem 'pry-debugger'
  gem 'addressable'
end
